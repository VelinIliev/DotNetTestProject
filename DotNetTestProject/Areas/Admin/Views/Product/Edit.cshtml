@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit product</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Title" class="mb-1"></label>
            <input asp-for="Title" type="text" class="form-control">
            <span asp-validation-for="Title" class="text-danger mt-1"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Author" class="mb-1"></label>
            <input asp-for="Author" type="text" class="form-control">
            <span asp-validation-for="Author" class="text-danger mt-1"></span>
        </div>
                
        <div class="mb-3">
            <label asp-for="Description" class="mb-1"></label>
            <textarea asp-for="Description" type="" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="ISBN" class="mb-1"></label>
            <input asp-for="ISBN" type="text" class="form-control">
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="ListPrice" class="mb-1"></label>
            <input asp-for="ListPrice" type="number" class="form-control">
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Price" class="mb-1"></label>
            <input asp-for="Price" type="number" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Price50" class="mb-1"></label>
            <input asp-for="Price50" type="number" class="form-control">
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Price100" class="mb-1"></label>
            <input asp-for="Price100" type="number" class="form-control">
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        
        <div asp-validation-summary="All" ></div>
        <div asp-validation-summary="ModelOnly" ></div>
        <div class="row">
            <div class="col-6">
                <button
                    type="submit"
                    class="btn btn-primary form-control">
                    Update
                </button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" 
                   class="btn btn-outline-secondary form-control" 
                >Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}